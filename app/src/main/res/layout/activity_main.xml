    xmlns:tools="http://schemas.android.com/tools"
    style="@style/myBox"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
