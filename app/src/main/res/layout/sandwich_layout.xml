<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/foodName"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/sandwichOne"
        android:textAlignment="viewStart"
        android:textColor="#000"
        android:textSize="20sp"
        tools:onClick="onClick" />

    <ImageView
        android:id="@+id/checkBoxImage"
        android:layout_width="99dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/checked_box" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="285dp"
        android:layout_height="42dp"
        android:layout_below="@+id/foodName"
        android:layout_alignParentStart="true"
        android:text="This is a description of the foodItem, it will wrap to the next line if needed" />
</RelativeLayout>